
@{
    ViewBag.Title = "CompanyAnnouncements";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <h1>Company Announcements</h1>
</section>
<section class="content">
    <div class="row">

        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box">
                <!-- /.box-header -->
                <!-- form start -->
                @*<form role="form">*@
                <div class="box-body">
             
                    <div class="form-group">
                        <label for="txtFirstName">Title</label>
                        <input type="text" class="form-control" id="txtFirstName" placeholder="Enter title">
                    </div>
                    <div class="form-group">
                        <label for="txtlastname">Content</label>
                        <input type="text" class="form-control" id="txtLastName" placeholder="Content">
                    </div>
                    <div class="form-group">
                        <img class="profile-user-img img-responsive" style="width:150px;height:200px;margin:initial" id="announcementImageDisplay" src="~/Content/Images/AnnouncementImage.jpg" alt="User profile picture">
                        <div style="padding-top:10px">
                            <label class="btn btn-info"><i class="fa fa-upload"></i><input id="employeeImage" type="file" style="display:none" onchange="ValidateAndUploadImage()" /> Upload</label>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" id="btnSubmitEmployeeDetails" class="btn btn-primary">Submit</button>
                </div>
                @*</form>*@

            </div>
        </div>
    </div>

    <!-- /.row -->
</section>
<script>
    $('#companyAnnouncements').parent().addClass('active');
</script>