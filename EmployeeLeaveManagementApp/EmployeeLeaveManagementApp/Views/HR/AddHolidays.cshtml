@model IList<LMS_WebAPP_Domain.HolidayModel>

    @{
        ViewBag.Title = "AddHolidays";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <section class="content-header" style="height:41px">
        <h1 class="col-md-9">
            Holidays
        </h1>
        <div style="float:right;padding-right:0px" class="col-md-2">
            <button type="button" id="btnAddHolidays" class="btn btn-block bg-black" style="background-color:#222d32 !important"><i class="fa fa-plus"></i>&nbsp; Add Holiday </button>
        </div>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Description</th>
                                    <th>Year</th>
                                    <th>IsActive</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (LMS_WebAPP_Domain.HolidayModel m in Model)
                                {
                                    <tr>
                                        <td>@m.Date</td>
                                        <td>@m.Description</td>
                                        <td>@m.Year</td>
                                        <td>@m.IsActive </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
<script>
    $(document).ready(function () {
        $('#addHolidays').parent().addClass('active');
    });
</script>
