@model EmployeeLeaveManagementApp.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var details = Model.LeaveDetails;

}
<style>
.Highlighted {
   background-color : Green !important;
   background-image :none !important;
   color: White !important;
