<script>
    var educationFromDate;
    var educationToDate;
    var experienceFromDate;
    var experienceToDate;
    var imgpath = "";
    var imgId;
    $(document).ready(function () {
        $(function () {
            //Initialize Select2 Elements
            $(".skills").select2({
                placeholder: "Select required skills"
            });
            $('#resourceRequestHistoryTable').DataTable();

            $('#experienceDatePicker').on('change.daterangepicker', function (ev, picker) {
                var date = ev.target.value;
                var dates = [];
                dates = date.split('-');
                var start = dates[0].trim();
                var startDate = new Date(start);
                var startMonth = startDate.getMonth() + 1;
                experienceFromDate = startDate.getFullYear() + "-" + startMonth + "-" + startDate.getDate();
                var end = dates[1].trim();
                var endDate = new Date(end);
                var endMonth = endDate.getMonth() + 1;
                experienceToDate = endDate.getFullYear() + "-" + endMonth + "-" + endDate.getDate();
            });

        })

        table = '<tr class="even">';
        table += '<td><a href="#" onClick="getResourceDetails(4)">Lorem</a></td>';
        table += "<td>Ipsum</td>";
        table += "</tr>";
        table += '<tr class="odd">';
        table += '<td><a href="#">Lorem</a></td>';
        table += "<td>Ipsum</td>";
        table += "</tr>";
        $("#resourceRequest-body").append(table);
    });

    $(document).on('click', '#btnSendResourceRequest', function (e) {
        var requestTitle = $("#txtRequestTitle").val();
        var noOfResourcesRequested = $("#txtResourcesRequired").val();
        var skills = [];
        for (i = 0; i < $("#ddlSkills").val().length; i++) {
            skills.push($("#ddlSkills").val()[i]);
        }
        var requestSendTo = parseInt($("#ddlRequestSendToSel option:selected").val());
        var model = {
            ResourceRequestTitle: $("#txtRequestTitle").val(),
            RequestToId:requestSendTo,
            NumberRequestedResources: $("#txtResourcesRequired").val(),
            Skills: skills,
            HRId: $("#ddlRequestSendToSel option:selected").val()
        };
        $.ajax({
            cache: false,
            type: 'post',
            url: '/ResourceRequest/SendRequestForResources',
            data: JSON.stringify(model),
            contentType: "application/json",
            dataType: "json",
            processData:false,
            success: function (data) {
                if (data.result == true) {
                    if ($("#resourceRequestHistoryTable").find('tbody').find('tr').find('td').length == 1) {
                        $("#resourceRequestHistoryTable").find('tbody').find('tr').remove();
                    }
                    $("#txtRequestTitle").val("");
                    $("#txtResourcesRequired").val("");
                    $("#ddlSkills").val(null).trigger("change");
                    var table = $('#resourceRequestHistoryTable').DataTable();
                    var createdDate = ToJavaScriptDate(data.model.CreatedDate);
                    var updatedDate = ToJavaScriptDate(data.model.UpdatedDate);
                    var tableRow = '<tr>';
                    tableRow += '<td><a href="#" data-ticket="'+data.model.Ticket+'" data-created="'+createdDate+'"' +
                        ' data-updated="'+updatedDate+'" data-title="'+data.model.ResourceRequestTitle+'"' +
                        ' data-noRsource="'+data.model.NumberRequestedResources+'" data-skills="'+data.model.Skills+'"' +
                        ' data-sentTo="' + data.model.RequestToName + '" data-status="' + data.model.StatusValue + '" onclick="ticketClicked(this)">' +
                        '' + data.model.Ticket + '</a></td>';
                    tableRow += '<td>' + data.model.ResourceRequestTitle + '</td><td>' + data.model.StatusValue + '</td>';
                    tableRow += '</tr>';

                    //$("#requestHistoryTableBody").append(tableRow);
                    $("#resourceRequestHistoryTable").find('tbody').append(tableRow)
                }

            }
        });
    }
   );

    function ticketClicked(id) {
        $(".requestTitle").html($(id).attr('data-title'));
        $(".requestTicket").html($(id).attr('data-ticket'));
        $(".requestResourceNumber").html($(id).attr('data-noRsource'));
        $(".requestedSkills").html($(id).attr('data-skills'));
        $(".requestSentTo").html($(id).attr('data-sentTo'));
        $(".requestStatus").html($(id).attr('data-status'));
        $(".requestSentDate").html($(id).attr('data-created'));
        $(".requestResponseDate").html($(id).attr('data-updated'));

        $('#RequestResourceDetailsModal').modal('show');
    }

    function ToJavaScriptDate(value) {
        var pattern = /Date\(([^)]+)\)/;
        var results = pattern.exec(value);
        var dt = new Date(parseFloat(results[1]));
        return (dt.getDate() + "/" + dt.getMonth() + 1) + "/" + dt.getFullYear();
    }
</script>