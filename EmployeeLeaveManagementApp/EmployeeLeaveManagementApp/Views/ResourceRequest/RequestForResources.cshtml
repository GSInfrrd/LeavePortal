                        <tbody class="requestHistoryTableBody">
                            @foreach (var resource in Model.ResourceRequestHistory)
                            {
                                <tr>
                                    <td><a href="#" data-ticket="@resource.Ticket" data-created="@resource.CreatedDate" data-updated="@resource.UpdatedDate" data-title="@resource.ResourceRequestTitle" data-noRsource="@resource.NumberRequestedResources" data-skills="@resource.Skills" data-sentTo="@resource.RequestToName" data-status="@resource.StatusValue" onclick="ticketClicked(this)">@resource.Ticket</a></td>
