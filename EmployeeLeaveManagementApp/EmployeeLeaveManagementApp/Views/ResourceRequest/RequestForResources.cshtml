<section class="content-header">
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Resource Requests</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table no-margin" id="resourceRequestHistoryTable">
                            <thead>
                                <tr>
                                    <th>Request Ticket</th>
                                    <th>Request Title</th>
                                    <th>Created on</th>
                                    <th>Status</th>
                                    <th>Cancel Request</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var resource in Model.ResourceRequestHistory)
                                {
                                    <tr id="@resource.Ticket">
                                        <td><a href="#" data-ticket="@resource.Ticket" data-created="@resource.CreatedDate" data-updated="@resource.UpdatedDate" data-title="@resource.ResourceRequestTitle" data-noRsource="@resource.NumberRequestedResources" data-skills="@resource.Skills" data-sentTo="@resource.RequestToName" data-statusKey="@resource.Status" data-status="@resource.StatusValue" onclick="ticketClicked(this)">@resource.Ticket</a></td>
                                        <td>@resource.ResourceRequestTitle</td>
                                        @{
                                            var dateWithTime = resource.CreatedDate;
                                            string createdDate = "";
                                            createdDate = dateWithTime.ToString("MM/dd/yyyy");
                                        }
                                        <td>@createdDate</td>
                                        <td>
                                            <div class="btn-group">
                                                @if (resource.Status == 1)
                                                {
                                                    <span class="label btn-color-requested">@resource.StatusValue</span>
                                                }
                                                else if (resource.Status == 2)
                                                {
                                                    <span class="label btn-color-processing">@resource.StatusValue</span>
                                                }
                                                else if (resource.Status == 3)
                                                {
                                                    <span class="label btn-color-partialApproval">@resource.StatusValue</span>
                                                }
                                                else 
                                                {
                                                    <span class="label btn-color-approved">@resource.StatusValue</span>
                                                }
                                            </div>
                                        </td>
                                       
                                        <td class="text-align_center">
                                        @if (resource.Status != 4)
                                        {
                                            <a href="#"><span class="label btn-danger" data-ticket="@resource.Ticket" onclick="cancelRequest(this)">Cancel</span></a>
                                        }
                                        </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <a href="javascript:void(0)" class="btn btn-sm btn-flat pull-left bg-black"data-toggle="modal" data-target=".addResourceRequest-modal">Place New Request</a>
                    @if (Model.Count > 10)
                    {
                        <a href="javascript:void(0)" id="" class="btn btn-sm btn-flat pull-right bg-black viewAllBtn" onclick="getAllRequests()">View All Requests</a>
                    }
                    else
                    {
                        <a href="javascript:void(0)" id="" class="btn btn-sm btn-flat pull-right bg-black viewAllBtn" onclick="getAllRequests()" style="display:none">View All Requests</a>
                    }
                </div>
            </div>
        </div>
        
    </div>
    <!-- /.row -->
</section>
<div class="modal addResourceRequest-modal" id="addResourceRequestModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3 class="modal-title">Resource Request</h3>
            </div>
            <div class="modal-body">
                <div class="box-body">
                    <div class="form-group" style="padding-bottom:20px">
                        <div class="form-group col-md-6">
                            <label for="txtRequestTitle">Request Title</label>
                            <input type="text" class="form-control" id="txtRequestTitle" placeholder="Enter Request Title" maxlength="50">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="txtNoOfResourcesRequired">No of Resources Required</label>
                            <input type="number" min="1" max="20" class="form-control" id="txtResourcesRequired">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="ddlSkills">Skills</label>
                            <select id="ddlSkills" multiple="multiple" class="form-control skills" style="width: 100%;">
                                @foreach (var skill in Model.Skills)
                            {
                                    <option value="@skill">@skill</option>
                            }
                            </select>
                        </div>
                        <div class="form-group col-md-6" id="ddlRequestToDiv">
                            <label>Request send to</label>
                            <select class="form-control" style="width: 100%;" id="ddlRequestSendToSel">
                                @foreach (var hr in Model.ListOfHR)
                            {
                                    <option value="@hr.Id">@hr.FirstName @hr.LastName</option>
                            }
                            </select>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <div class="form-group col-md-6 margin-bottom-0 btn-backgroundColor-dark">
                        <button type="submit" id="btnSendResourceRequest" class="btn btn-primary bg-black">Send request</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

