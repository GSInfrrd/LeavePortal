<script>
    var educationFromDate;
    var educationToDate;
    var experienceFromDate;
    var experienceToDate;
    var imgpath = "";
    var imgId;
    $(document).ready(function () {
        $(function () {
            //Initialize Select2 Elements
            $(".skills").select2({
                placeholder: "Select skills",
                maximumSelectionLength: 1
            });
            //$('#resourceRequestHistoryTable').DataTable();
            $('#resourceRequestHistoryTable').DataTable({
                "ordering": true,
                "paging": false,
                "lengthChange": false,
                "searching": false,
                "autoWidth": false,
                "info": false,
            });

            $('#experienceDatePicker').on('change.daterangepicker', function (ev, picker) {
                var date = ev.target.value;
                var dates = [];
                dates = date.split('-');
                var start = dates[0].trim();
                var startDate = new Date(start);
                var startMonth = startDate.getMonth() + 1;
                experienceFromDate = startDate.getFullYear() + "-" + startMonth + "-" + startDate.getDate();
                var end = dates[1].trim();
                var endDate = new Date(end);
                var endMonth = endDate.getMonth() + 1;
                experienceToDate = endDate.getFullYear() + "-" + endMonth + "-" + endDate.getDate();
            });

        });
    });

    $(document).on('click', '#btnSendResourceRequest', function (e) {
        var requestTitle = $("#txtRequestTitle").val();
        if ($(requestTitle).length > 50) {
            $("#txtRequestTitle").val("");
            showMessage("Request title too long", "2", true);
            return false;
        }
        else if (requestTitle == "") {
            showMessage("Please enter request title", "2", true);
            return false;
        }
        var noOfResourcesRequested = $("#txtResourcesRequired").val();
        if (parseInt(noOfResourcesRequested) < 0 || parseInt(noOfResourcesRequested) == 0 || parseInt(noOfResourcesRequested) > 20) {
            $("#txtResourcesRequired").val("");
            showMessage("Number of requested resources must be between 1 and 10", "2", true);
            return false;
        }
        var skills = [];
        if (null != $("#ddlSkills").val()) {
            for (i = 0; i < $("#ddlSkills").val().length; i++) {
                skills.push($("#ddlSkills").val()[i]);
            }
        }
        else {
            showMessage("Please select required skills", "2", true);
            return false;
        }
        
        var requestSendTo = parseInt($("#ddlRequestSendToSel option:selected").val());
        var model = {
            ResourceRequestTitle: $("#txtRequestTitle").val(),
            RequestToId:requestSendTo,
            NumberRequestedResources: $("#txtResourcesRequired").val(),
            Skills: skills,
            HRId: $("#ddlRequestSendToSel option:selected").val()
        };
        $.ajax({
            cache: false,
            type: 'post',
            url: '/ResourceRequest/SendRequestForResources',
            data: JSON.stringify(model),
            contentType: "application/json",
            dataType: "json",
            processData:false,
            success: function (data) {
                if (data.result == true) {
                   
                    $("#txtRequestTitle").val("");
                    $("#txtResourcesRequired").val("");
                    $("#ddlSkills").val(null).trigger("change");
                    $("#resourceRequestHistoryTable").find('tbody').html("");
                    for (i = 0; i < data.model.length;i++){
                        var tableRow = tabeRowPopulate(data.model[i]);
                        $("#resourceRequestHistoryTable").find('tbody').append(tableRow);
                    }
                    var noOfRows = parseInt($('#resourceRequestHistoryTable tr').length);
                    if (noOfRows > 10) {
                        for (i = noOfRows - 1; i > 10; i--) {
                            $('table#resourceRequestHistoryTable tr:nth-child(' + i + ')').remove();
                        }
                    }
                    if (data.count <= 10) {
                        $(".viewAllBtn").hide();
                    }
                    else {
                        $(".viewAllBtn").show();
                    }
                    $('#addResourceRequestModal').modal('hide');
                    showMessage("Request sent successfully", "1", true);
                }
                else {
                    showMessage("Request could not be sent", "2", true);
                }

            }
        });
    }
   );

    function ticketClicked(id) {
        $(".requestTitle").html($(id).attr('data-title'));
        $(".requestTicket").html($(id).attr('data-ticket'));
        $(".requestResourceNumber").html($(id).attr('data-noRsource'));
        $(".requestedSkills").html($(id).attr('data-skills'));
        $(".requestSentTo").html($(id).attr('data-sentTo'));
        var statusKey = parseInt($(id).attr('data-statusKey'));
        if (statusKey == 1) {
            $(".requestStatus").html('<span class="label btn-color-requested">' + $(id).attr("data-status") + '</span>');
        }
        else if (statusKey == 2) {
            $(".requestStatus").html('<span class="label btn-color-processing">' + $(id).attr("data-status") + '</span>');
        }
        else if (statusKey == 3) {
            $(".requestStatus").html('<span class="label btn-color-partialApproval">' + $(id).attr("data-status") + '</span>');
        }
        else {
            $(".requestStatus").html('<span class="label btn-color-approved">' + $(id).attr("data-status") + '</span>');
        }
        var createdDate = $(id).attr('data-created').split(" ")[0];
        $(".requestSentDate").html(createdDate);
        $(".requestResponseDate").html($(id).attr('data-updated'));

        $('#RequestResourceDetailsModal').modal('show');
    }

    function getAllRequests() {
        $.ajax({
            cache: false,
            type: 'post',
            url: '/ResourceRequest/ViewAllRequests',
            contentType: "application/json",
            dataType: "json",
            processData: false,
            success: function (data) {
                var model = data.model;
                for (i = 0; i < model.length;i++ ){
                    var tableRow = tabeRowPopulate(model[i]);
                    $("#resourceRequestHistoryTable").find('tbody').append(tableRow);
                }
            }
        });
    }  

    function tabeRowPopulate(model) {
        var createdDate = ToJavaScriptDate(model.CreatedDate);
        var updatedDate = ToJavaScriptDate(model.UpdatedDate);
        var statusKey = parseInt(model.Status);
        var tableRow = '<tr id="' + model.Ticket + '">';
        tableRow += '<td><a href="#" data-ticket="' + model.Ticket + '" data-created="' + createdDate + '"' +
            ' data-updated="' + updatedDate + '" data-title="' + model.ResourceRequestTitle + '"' +
            ' data-noRsource="' + model.NumberRequestedResources + '" data-skills="' + model.Skills + '"' +
            ' data-sentTo="' + model.RequestToName + '" data-status="' + model.StatusValue + '" onclick="ticketClicked(this)">' +
            '' + model.Ticket + '</a></td>';
        tableRow += '<td>' + model.ResourceRequestTitle + '</td>';
        tableRow += '<td>' + createdDate + '</td>';
        if (statusKey == 1) {
            tableRow += '<td>' + '<span class="label btn-color-requested">' + model.StatusValue + '</span>' + '</td>';
        }
        else if (statusKey == 2) {
            tableRow += '<td>' + '<span class="label btn-color-processing">' + model.StatusValue + '</span>' + '</td>';
        }
        else if (statusKey == 3) {
            tableRow += '<td>' + '<span class="label btn-color-partialApproval">' + model.StatusValue + '</span>' + '</td>';
        }
        else {
            tableRow += '<td>' + '<span class="label btn-color-approved">' + model.StatusValue + '</span>' + '</td>';
        }
        
        tableRow += '<td class="text-align_center">';
        if (statusKey != 4) {
            tableRow += '<a href="#"><span class="label btn-danger" data-ticket="' + model.Ticket + '" onclick="cancelRequest(this)">Cancel</span></a>';                        
        }
        tableRow += '</td>';
        tableRow += '</tr>';
        return tableRow;
    }

    function cancelRequest(id) {
        var ticket = $(id).attr('data-ticket');
        $.ajax({
            type: "POST",
            url: "/ResourceRequest/CancelRequest",
            dataType: "json",
            data: { ticket: ticket },
            async: false,
            success: function (data) {
                if (data.result) {
                    $("#resourceRequestHistoryTable").find('tbody').html("");
                    for (i = 0; i < data.model.length; i++) {
                        var tableRow = tabeRowPopulate(data.model[i]);
                        $("#resourceRequestHistoryTable").find('tbody').append(tableRow);
                    }
                    if (data.count <= 10) {
                        $(".viewAllBtn").hide();
                    }
                    else {
                        $(".viewAllBtn").show();
                    }
                    showMessage("Request cancelled successfully", "1", true);
                }
                else {
                    showMessage("Request could not be cancelled", "2", true);
                }
            },
            error: function (result) {
                //alert("GetCompanyDetails");
            }
        });
    }

    function showMessage(message, Type, fadeOut) {
        //To clear existing toastr
        toastr.clear();
        //fadeOut = false;
        var position = "bottom-full-width";
        toastr.options.positionClass = 'toast-' + position;
        if (typeof fadeOut !== "undefined" && fadeOut == false) { toastr.options.timeOut = 0; }
        else {
            toastr.options.timeOut = 5000;
        }
        switch (Type) {
            case "1":
                toastr.success(message);
                break;
            case "2":
                toastr.error(message);
                break;
        }
    }
</script>