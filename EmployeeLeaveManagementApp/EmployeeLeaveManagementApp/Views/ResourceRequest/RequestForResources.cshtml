<section class="content">
    <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border margin-bottom-5">
                    <h3 class="box-title">Resource Details</h3>
                </div>

                <div class="box-body">
                    <div class="form-group col-md-6">
                        <label for="txtRequestTitle">Request Title</label>
                        <input type="text" class="form-control" id="txtRequestTitle" placeholder="Enter Request Title">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="txtNoOfResourcesRequired">No of Resources Required</label>
                        <input type="number" class="form-control" id="txtResourcesRequired">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="ddlSkills">Skills</label>
                        <select id="ddlSkills" multiple="multiple" class="form-control skills" style="width: 100%;">
                            @foreach (var skill in Model.Skills)
                            {
                                <option value="@skill">@skill</option>
                            }
                        </select>
                    </div>
                    <div class="form-group col-md-6" id="ddlRequestToDiv">
                        <label>Request send to</label>
                        <select class="form-control" style="width: 100%;" id="ddlRequestSendToSel">
                            @foreach (var hr in Model.ListOfHR)
                            {
                                <option value="@hr.Id">@hr.FirstName @hr.LastName</option>
                            }
                        </select>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <div class="form-group col-md-6 margin-bottom-0 btn-backgroundColor-dark">
                        <button type="submit" id="btnSendResourceRequest" class="btn btn-primary bg-black">Send request</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Resource Request History</h3>
                </div>
                <!-- /.box-header -->
