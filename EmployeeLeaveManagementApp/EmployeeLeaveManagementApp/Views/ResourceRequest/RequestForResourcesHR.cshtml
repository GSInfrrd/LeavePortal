<script src="~/Content/Scripts/Common.js"></script>
<script>
    $(document).ready(function () {
        $(function () {
            $('#resourceRequestsTable').DataTable();
        });
    });
    function showRequestedDetails(id) {
        var statusKey = parseInt($(id).attr('data-statusKey'));
        var requestId = parseInt($(id).attr('data-id'));
        $(".requestTitle").html($(id).attr('data-title'));
        $(".requestTicket").html($(id).attr('data-ticket'));
        $(".requestResourceNumber").html($(id).attr('data-noRsource'));
        $(".requestedSkills").html($(id).attr('data-skills'));
        $(".requestFrom").html($(id).attr('data-from'));
        $(".requestStatus").html($(id).attr('data-status'));
        $(".requestStatus").attr("status", statusKey);
        $(".requestSentDate").html($(id).attr('data-created'));

        $(".requestResponseDate").html($(id).attr('data-updated'));
        if (statusKey == 1) {
            $("#btnModalStatus").addClass("btn-info");
            $(".statusListDropdown").html("");
            $(".statusListDropdown").append('<li><a href="#" class="text-color-white btn-color-approved" data-id="'+id +'" data-createdDate="' + $(id).attr('data-created') + '" data-ticket="' + $(id).attr('data-ticket') + '" data-statusKey="' + statusKey + '" onclick="respondToRequest(this)">' + 'Approved' + '</a></li>');
        }
        else if (statusKey == 2) {
            $("#btnModalStatus").addClass("btn-success");
            $(".statusListDropdown").html("");
            $(".statusListDropdown").append('<li><a href="#" class="text-color-white btn-color-approved" data-id="' + id+'" data-createdDate="' + $(id).attr('data-created') + '"  data-ticket="' + $(id).attr('data-ticket') + '" data-statusKey="' + statusKey + '" onclick="respondToRequest(this)">' + 'In Progress' + '</a></li>');
        }
        $("#btnModalStatus").html($(id).attr('data-status') + '<span class="caret margin-left-5"></span>');
        $("#ResourceRequestToRespondModal").modal('show');
    }

    function respondToRequest(id) {
        var ticket = $(id).attr('data-ticket');
        var status = parseInt($(id).attr('data-statusKey'));
        var creatdeDateValue = $(id).attr('data-createdDate');
        var createdDate = new Date(creatdeDateValue);
        var id = parseInt($(id).attr('data-id'));
        var model = {
            Id:id,
            Ticket: ticket,
            Status: status,
            CreatedDate: createdDate
        };
        $.ajax({
            cache: false,
            type: 'post',
            url: '/ResourceRequest/RespondToRequestForResourcest',
            data: JSON.stringify(model),
            contentType: "application/json",
            dataType: "json",
            processData:false,
            success: function (data) {
                if(data.result == true){
                    $(".requestHistoryTableBody").html("");
                    @*$.post('@Url.Action("GetUpdatedRequests", "ResourceRequest")').always(function () {
                        $('.target').load('/Shared/_RequestHistoryTable');
                    });*@
                    @*$("#requestHistoryTableBody").load('@(Url.Action("RequestHistoryTable", "ResourceRequest"))');*@
                    for (i = 0; i < data.model.length; i++) {
                        var createdDate = ToJavaScriptDate(data.model[i].CreatedDate);
                        var tableRow = "<tr>";
                        tableRow += '<td><a href="#" onClick="showRequestedDetails(this)" data-ticket="' + data.model[i].Ticket + '" data-created="' + createdDate + '"' +
			                        ' data-updated="' + data.model[i].UpdatedDate + '" data-title="' + data.model[i].ResourceRequestTitle + '" ' +
			                        'data-noRsource="' + data.model[i].NumberRequestedResources + '"' +
			                        ' data-skills="' + data.model[i].Skills + '" data-from="' + data.model[i].RequestFromName + '" data-status="' + data.model[i].StatusValue + '" ' +
			                        'data-statusKey="' + data.model[i].Status + '" onclick="ticketClicked(this)">' + data.model[i].Ticket + '</a></td>';
                        tableRow += '<td>' + data.model[i].ResourceRequestTitle + '</td>';
                        tableRow += '<td><div class="btn-group">';
                        if (data.model[i].Status == 1) {
                            tableRow += '<button type="button" class="btn btn-info text-color-white dropdown-toggle" ' +
                            'data-status="' + data.model[i].Status + '" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">' +
                            '' + data.model[i].StatusValue + ' <span class="caret"></span></button>';
                        }
                        else if (data.model[i].Status == 2) {
                            tableRow += '<button type="button" class="btn btn-success text-color-white dropdown-toggle" ' +
                                'data-status="' + data.model[i].Status + '" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">' +
                                '' + data.model[i].StatusValue + ' <span class="caret"></span></button>';
                        }
                        tableRow += '<ul class="dropdown-menu">';
                        if (data.model[i].Status == 1) {
                            tableRow += '<li><a href="#" class="text-color-white btn-color-processing" ' +
                            'data-id="' + data.model[i].Id + '" onclick="respondToRequest(this)" data-createdDate="' + data.model[i].CreatedDate + '"' +
                            ' data-ticket="' + data.model[i].Ticket + '" data-statusKey="' + data.model[i].Key + '">' + data.model[i].Value + '</a></li>';
                        }
                        else if (data.model[i].Status == 2) {
                            tableRow += '<li><a href="#" class="text-color-white btn-color-approved" ' +
                            'data-id="' + data.model[i].Id + '" onclick="respondToRequest(this)" data-createdDate="' + data.model[i].CreatedDate + '"' +
                            ' data-ticket="' + data.model[i].Ticket + '" data-statusKey="' + data.model[i].Key + '">' + data.model[i].Value + '</a></li>';
                        }
                        tableRow += '</ul></div></td></tr>';
                    }
                    $("#resourceRequestsTable").find('tbody').append(tableRow);

                }
            }
        });
    }

    function ToJavaScriptDate(value) {
        var pattern = /Date\(([^)]+)\)/;
        var results = pattern.exec(value);
        var dt = new Date(parseFloat(results[1]));
        return (dt.getDate() + "/" + dt.getMonth() + 1) + "/" + dt.getFullYear();
    }
</script>
