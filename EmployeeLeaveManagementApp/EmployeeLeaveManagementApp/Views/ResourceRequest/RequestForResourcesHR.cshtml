@model List<LMS_WebAPP_Domain.ResourceRequestDetailModel>
@{ 
    var lstRequestStatus = new Dictionary<int, string>();
    foreach (var name in Enum.GetNames(typeof(LMS_WebAPP_Utils.ResourceRequestStatus)))
    {
        lstRequestStatus.Add((int)Enum.Parse(typeof(LMS_WebAPP_Utils.ResourceRequestStatus), name), LMS_WebAPP_Utils.CommonMethods.Description((LMS_WebAPP_Utils.ResourceRequestStatus)Enum.Parse(typeof(LMS_WebAPP_Utils.ResourceRequestStatus), name, true)));
    }
    var serializedlstRequestStatus = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(lstRequestStatus));
}

<link href="~/Content/Style.css" rel="stylesheet" />
<link href="~/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" />
<section class="content">
    <input id="requestStatusEnum" data-val="@serializedlstRequestStatus" hidden>
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Resource Request To Respond</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <div class="reousrceHistoryDiv padding-top5-bottom20 padding-right-left-15">

                @*@foreach (var resource in Model.ResourceRequestHistory)
                    {
                        <div class="row margin-left-right-15 resourceHistoryDetails padding-top-bottom-5 border-bottom-table">
                            <div class="col-md-4 pad-right0-pad-right-15">@resource.Ticket</div>
                            <div class="col-md-4 pad-right0-pad-right-15">@resource.ResourceRequestTitle</div>
                            <div class="col-md-4 pad-right0-pad-right-15">@resource.Status</div>
                        </div>
                    }*@
                <table id="resourceRequestsTable" class="display" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Request Ticket</th>
                            <th>Request Title</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Request Ticket</th>
                            <th>Request Title</th>
                            <th>Status</th>
                        </tr>
                    </tfoot>
                    <tbody class="requestHistoryTableBody">
                        @foreach (var resource in Model)
                        {
                            <tr>
                                <td><a href="#" onClick="showRequestedDetails(this)" data-ticket="@resource.Ticket" data-created="@resource.CreatedDate" data-updated="@resource.UpdatedDate" data-title="@resource.ResourceRequestTitle" data-noRsource="@resource.NumberRequestedResources" data-skills="@resource.Skills" data-from="@resource.RequestFromName" data-status="@resource.StatusValue" data-statusKey="@resource.Status" onclick="ticketClicked(this)">@resource.Ticket</a></td>
                                <td>@resource.ResourceRequestTitle</td>
                                <td>
                                    <div class="btn-group">
                                        @if (resource.Status == 1)
                {
                                            <button type="button" class="btn btn-info text-color-white dropdown-toggle" data-status="@resource.Status" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                @resource.StatusValue <span class="caret"></span>
                                            </button>
                                        }
                                        else if (resource.Status == 2)
                                        {
                                            <button type="button" class="btn btn-success text-color-white dropdown-toggle" data-status="@resource.Status" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                @resource.StatusValue <span class="caret margin-left-5"></span>
                                            </button>
                                        }
                                        <ul class="dropdown-menu">
                                            @foreach (var requestStatus in lstRequestStatus)
                                            {
                                                if (requestStatus.Key != resource.Status)
                                                {
                                                    if (requestStatus.Key == 1)
                                                    {
                                                        <li><a href="#" class="text-color-white btn-color-processing" data-id="@resource.Id" onclick="respondToRequest(this)" data-createdDate="@resource.CreatedDate" data-ticket="@resource.Ticket" data-statusKey="@requestStatus.Key">@requestStatus.Value</a></li>
                                                    }
                                                    else if (requestStatus.Key == 2)
                                                    {
                                                        <li><a href="#" class="text-color-white btn-color-approved" data-id="@resource.Id" onclick="respondToRequest(this)" data-createdDate="@resource.CreatedDate" data-ticket="@resource.Ticket" data-statusKey="@requestStatus.Key">@requestStatus.Value</a></li>
                                                    }
                                                }
                                            }
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</section>
