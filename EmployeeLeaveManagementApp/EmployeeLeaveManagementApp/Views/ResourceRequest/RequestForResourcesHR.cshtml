                            <div class="col-md-4"><label class="">Request sent date:</label></div>
                            <div class="col-md-8"><span class="requestSentDate"></span></div>
                        </div>
                        @*<div class="row">
                            <div class="col-md-4"><label class="">Request response date:</label></div>
                            <div class="col-md-8"><span class="requestResponseDate"></span></div>
                        </div>*@
                        <div class="row">
                            <div class="col-md-4"><label class="">Status:</label></div>
                            <div class="btn-group">
                                <button type="button" id="btnModalStatus" class="btn text-color-white dropdown-toggle" data-status="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    
                                </button>
                                <ul class="dropdown-menu statusListDropdown">
                                    
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
