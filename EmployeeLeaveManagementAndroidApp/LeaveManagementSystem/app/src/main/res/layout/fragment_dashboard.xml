<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dimen_16_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dimen_16_dp"
                    android:paddingRight="@dimen/dimen_8_dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardview_leave_balance"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_card_height_dashboard"
                        android:visibility="invisible"
                        card_view:cardBackgroundColor="@color/colorRemainingLeaves">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/count_leave_balance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"
                                android:textSize="36sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/leave_balance"
                                android:textAlignment="center"
                                android:textColor="@android:color/white" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dimen_8_dp"
                    android:paddingRight="@dimen/dimen_16_dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardview_applied_leaves"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_card_height_dashboard"
                        android:visibility="invisible"
                        card_view:cardBackgroundColor="@color/colorAppliedLeaves">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/count_leaves_taken"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"
                                android:textSize="36sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/leaves_taken"
                                android:textAlignment="center"
                                android:textColor="@android:color/white" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dimen_16_dp"
                    android:paddingRight="@dimen/dimen_8_dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardview_work_from_home"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_card_height_dashboard"
                        android:visibility="invisible"
                        card_view:cardBackgroundColor="@color/colorWorkFromHome">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/count_work_from_home"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"
                                android:textSize="36sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/work_from_home"
                                android:textAlignment="center"
                                android:textColor="@android:color/white" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dimen_8_dp"
                    android:paddingRight="@dimen/dimen_16_dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardview_comp_off_taken"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_card_height_dashboard"
                        android:visibility="invisible"
                        card_view:cardBackgroundColor="@color/colorCompOffTaken">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/count_comp_off_taken"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"
                                android:textSize="36sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/comp_off"
                                android:textAlignment="center"
                                android:textColor="@android:color/white" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16_dp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_16_dp"
            android:paddingRight="@dimen/dimen_16_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner_leave_type"
                    style="@style/MyCustomSpinnerStyle"
                    android:layout_width="@dimen/dimen_140_dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dimen_8_dp"
                    android:visibility="gone" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner_year"
                    style="@style/MyCustomSpinnerStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textview_no_of_records"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_borders_edges"
                    android:paddingLeft="@dimen/dimen_8_dp"
                    android:paddingRight="@dimen/dimen_8_dp"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

            </LinearLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/graphview_leave_history"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_200_dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>