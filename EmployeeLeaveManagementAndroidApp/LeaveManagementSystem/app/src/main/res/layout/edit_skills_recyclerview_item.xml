<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dimen_16_dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_borders"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_8_dp"
        android:paddingRight="@dimen/dimen_8_dp">

        <TextView
            android:id="@+id/skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_8_dp"
            android:background="@drawable/border_single_side"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:paddingRight="@dimen/dimen_8_dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/skill_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/add_skill_imageview"
            android:layout_width="@dimen/dimen_16_dp"
            android:layout_height="@dimen/dimen_16_dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_add_vector" />

        <ImageView
            android:id="@+id/cancel_skill_imageview"
            android:layout_width="@dimen/dimen_16_dp"
            android:layout_height="@dimen/dimen_16_dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_cancel_vector" />
    </LinearLayout>
</LinearLayout>